<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen6dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/materialCardViewElevatedStyle"
        app:cardElevation="@dimen/dimen0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen12dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/topic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/dimen16sp" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/dimen20dp"
                android:layout_height="@dimen/dimen20dp"
                android:layout_marginStart="@dimen/dimen4dp"
                android:layout_marginEnd="@dimen/dimen8dp"
                android:contentDescription="@string/generic_img_copy"
                app:srcCompat="@drawable/ic_trash"
                app:tint="?attr/iconsColor" />

            <TextView
                android:id="@+id/notes_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dimen24dp"
                android:minWidth="@dimen/dimen24dp"
                android:background="@drawable/shape_badge_background"
                android:maxLength="3"
                android:layout_marginStart="@dimen/dimen8dp"
                android:layout_marginEnd="@dimen/dimen2dp"
                android:paddingStart="@dimen/dimen4dp"
                android:paddingEnd="@dimen/dimen4dp"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:textColor="?attr/snackbarContainer"
                android:textSize="@dimen/dimen16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
