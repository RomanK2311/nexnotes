<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NexNotes" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->

        <item name="iconsColor">@color/white</item>
        <item name="android:navigationBarColor">#211B2A</item>
        <item name="snackbarContainer">@color/snackbar_container</item>
        <item name="snackbarOnContainer">@color/white</item>
        <item name="divider">@color/divider_background_dark</item>
        <item name="inputColor">@color/input_color_dark</item>
    </style>

    <!-- custom material button -->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dimen16dp</item>
        <item name="cornerSizeBottomRight">@dimen/dimen4dp</item>
        <item name="cornerSizeTopLeft">@dimen/dimen16dp</item>
        <item name="cornerSizeBottomLeft">@dimen/dimen16dp</item>
    </style>
    <!-- custom material button -->
</resources>